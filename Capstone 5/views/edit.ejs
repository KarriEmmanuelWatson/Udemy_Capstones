

<section class="form-section">
  <h2>Edit Book</h2>
  <form class="book-form" action="/edit/<%= editBook.id %>" method="POST">
    <input type="text" name="title" value="<%= editBook.title %>" required>
    <input type="text" name="author" value="<%= editBook.author %>" required>
    <input type="date" name="read_date" value="<%= editBook.read_date.toISOString().split('T')[0] %>" required>
    <input type="number" name="rating" value="<%= editBook.rating %>" min="1" max="10" required>
    <input type="text" name="cover_id" value="<%= editBook.cover_id || '' %>">
    <textarea name="review"><%= editBook.review %></textarea>
    <button type="submit">Update Book</button>
  </form>
  <br>
  <a href="/" class="cta-button">Back to Home</a>
</section>
